@{
    ViewBag.Title = "Добавление / Редактирование поста";
    Layout = "~/Views/Shared/_Layout_Valid.cshtml";
}

@model MyBlog.Models.PostChangeModel

@using (Html.BeginForm("ChangeArticle", "Admin", new { title = Model.Title }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="add-post">

        @Html.LabelFor(m => m.Title, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Title, new { placeholder = Html.DisplayNameFor(m => m.Title), @class = "txt-box" })
        @Html.ValidationMessageFor(m => m.Title)

        <br />
        @Html.LabelFor(m => m.Content, new { @class = "control-label" })
        @Html.TextAreaFor(m => m.Content, new { placeholder = Html.DisplayNameFor(m => m.Content), @class = "txt-area" })
        @Html.ValidationMessageFor(m => m.Content)

        @Html.HiddenFor(m => m.PostId)


        <div class="wrap-btn">
            <button class="btn-save">Сохранить</button>
        </div>
    </div>
}


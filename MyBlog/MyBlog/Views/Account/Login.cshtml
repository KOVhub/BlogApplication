@{
    ViewBag.Title = "Вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MyBlog.Models.UserModel

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form", name = "LoginForm", id = "LoginForm", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    <div class="forma">
        <h1>Используйте учетную запись, чтобы войти</h1>

        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        @Html.TextBoxFor(m => m.Email, new { id = "l2", placeholder = Html.DisplayNameFor(m => m.Email) })
        @Html.ValidationMessageFor(m => m.Email)
        
        @Html.PasswordFor(m => m.Password, new { id = "p2", placeholder = Html.DisplayNameFor(m => m.Password) })
        @Html.ValidationMessageFor(m => m.Password)
              
        <button id="but">ВОЙТИ</button>
        
        @Html.ActionLink("ЗАРЕГИСТРИРОВАТЬСЯ", "Register", "Account")
    </div>
}